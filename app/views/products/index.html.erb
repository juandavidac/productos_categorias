<h1>Productos</h1>
<div class="text-right">
  <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %>
</div>


<table>
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Categorías</th>
    <th></th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <% product.categories.each do |category|%>
      <% categories_array=[] %>
      <% categories_array << category.name%>
      <% categories_string=categories_array.join(', ')  %>
      <td><%=categories_string%></td>
      <%end%>
      <td><%= link_to "Editar", edit_product_path(product) %></td>
      <td><%= link_to "Eliminar", product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %></td>
    </tr>
  <% end %>
</table>
